<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rit.dekic.gamingnews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission 
        android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.rit.dekic.gamingnews.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.rit.dekic.gamingnews.DisplayNews"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.rit.dekic.gamingnews.DisplayNewsItem"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.rit.dekic.gamingnews.DisplayFavorites"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.rit.dekic.gamingnews.EnterUrl"
            android:label="@string/app_name" >
        </activity>
    </application>
</manifest>
